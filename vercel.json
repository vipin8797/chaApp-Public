{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/app.js" },
    { "src": "/(.*)", "dest": "client/dist/$1" }
  ],
  "functions": {
    "api/**": {
      "runtime": "nodejs18.x"
    }
  }
}
